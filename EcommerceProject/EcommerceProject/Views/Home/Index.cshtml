@model IEnumerable<EcommerceProject.Models.HomeItem>
@{
    ViewBag.Title = "Home Page";
}

<script>
    function AddColorClick() {
        $('<input />').attr({
            type: "color",
            name: "color",
            class: "form-control"
        }).appendTo('#AddColorDiv')

        $('<input /><br/>').attr({
            type: "text",
            name: "number",
            class: "form-control"
        }).appendTo('#AddColorDiv')
    }
</script>

